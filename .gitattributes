# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts should always use LF
*.sh text eol=lf

# Windows scripts should use CRLF
*.ps1 text eol=crlf
*.bat text eol=crlf
*.cmd text eol=crlf

# Lua files
*.lua text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Git files
.gitignore text eol=lf
.gitattributes text eol=lf
